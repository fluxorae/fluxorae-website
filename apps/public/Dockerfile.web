# Dockerfile for Next.js (SSR) app (workspace-aware)
FROM node:18-alpine AS deps
WORKDIR /app
# Root workspace manifests
COPY package.json package-lock.json ./
# App manifest so workspace install knows about the package
COPY apps/public/package.json apps/public/
RUN npm ci --workspace apps/public --include-workspace-root=false

FROM node:18-alpine AS builder
WORKDIR /app
# Bring in installed deps
COPY --from=deps /app/node_modules ./node_modules
# Copy full repo (workspace context)
COPY . .
WORKDIR /app/apps/public
ENV SKIP_DB=1
RUN npm run build

FROM node:18-alpine AS runner
WORKDIR /app/apps/public
ENV NODE_ENV=production
ENV PORT=3000
COPY --from=builder /app/apps/public ./
COPY --from=builder /app/node_modules /app/node_modules
EXPOSE 3000
CMD ["npm", "start"]
